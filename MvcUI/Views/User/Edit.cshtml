@model UpdateUserDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-3 text-center">Update User</h1>
<div class="row">
    <div class="col-md-6 offset-3">
        <div class="border border-2 border-dark p-3">
            <form method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" asp-for="Name" name="Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="IdentificationNumber" class="form-label">Identification Number</label>
                    <input type="text" asp-for="IdentificationNumber" name="IdentificationNumber" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" asp-for="Email" name="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="Phone" class="form-label">Phone</label>
                    <input type="tel" asp-for="Phone" name="Phone" class="form-control" />
                </div>
                <div id="userId" class="mb-3">
                    <label for="CarNumberPlate" class="form-label">Car Number Plate</label>
                    <input type="text" asp-for="CarNumberPlate" name="CarNumberPlate" class="form-control" />
                </div>
                <div class="d-flex justify-content-center mb-3">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

