@model List<InvoceListDTO>

@{
    ViewData["Title"] = "GetDebtList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var invoce in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <h4 class="card-title text-danger m-3">@invoce.User</h4>
                    <div class="card-body">
                        <p class="card-text">Dues Price = @invoce.DuesPrice</p>
                        <p class="card-text">Invoice Price = @invoce.InvoicePrice</p>
                    </div>
                    <div class="card-footer text-muted p-2">
                        Invoice Month = @invoce.Month
                    </div>
                </div>
            </div>
        }
    </div>
</div>

